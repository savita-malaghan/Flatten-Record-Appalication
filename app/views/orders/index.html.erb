<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Discount</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer_id %></td>
        <td><%= order.discount %></td>
        <td><%= order.total %></td>
        <td><%= link_to 'Show', customer_order_path(@customer, order) %></td>
        <td><%= link_to 'Edit', edit_customer_order_path(@customer,order) %></td>
        <td><%= link_to 'Destroy', [@customer,order], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'line_items',  customer_order_line_items_path(@customer,order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_customer_order_path(@customer) %>
